{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"baseUrl": ".",
		"strict": true,
		"noErrorTruncation": true,
		"typeRoots": ["../shared", "node_modules/@types"],
		"paths": {
			"@shared/*": ["../shared/*"],
			"@store/*": ["./store/*"],
			"@context/*": ["./context/*"],
			"@components/*": ["./components/*"],
			"@utils/*": ["./utils/*"],
			"@libs/*": ["./libs/*"],
			"@api/*": ["./api/*"],
			"@functions/*": ["./functions/*"],
			"@constants/*": ["./constants/*"],
			"@hooks/*": ["./hooks/*"],
			"@redux/*": ["./redux/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "expo/.expo/types/**/*.ts", "expo-env.d.ts", ".expo/types/**/*.ts"]
}
